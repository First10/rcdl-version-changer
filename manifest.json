{
  "manifest_version": 2,

  "name": "RCDL Version Changer",
  "description": "RCDL Version Changer.",
  "version": "1.0",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "activeTab",
    "http://localhost:3000/assets/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
